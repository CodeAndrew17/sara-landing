---
const { title, description, image, video, techs } = Astro.props;
---

<div class="group relative rounded-xl overflow-hidden shadow-lg 
transform transition duration-300 hover:scale-105 
cursor-pointer w-full"
>
    <!-- video que aparece en el hover -->
    <video
        src={video}
        muted
        autoplay
        playsinline
        loop
        class="absolute inset-0 w-full object-cover 
        opacity-0 group-hover:opacity-100 transition-opacity 
        duration-300 z-10"
    ></video>

    <!-- imagen que aparece por defecto -->
    <img
        src={image} 
        alt={`Imagen del proyecto ${title}`}
        class="w-full object-cover transition-opacity duration-300 group-hover:opacity-0 z-0"
    />

    <!-- contenido como descripcion del proyecto -->
    <div class="absolute bottom-0 left-0 w-full bg-black/60 text-white p-4 z-20">
            <h3 class="absolute text-xl font-bold bottom-9">
                {title}
            </h3>
            <p class="absolute text-sm mt-1 bottom-5">  
                {description}
            </p>
        <div class="flex justify-end">
            {techs.map((tech: string) => ( //le decimos el tipo de dato q va a recibir para que no tire advertencia
                <img
                    src={`/icons/${tech}`}
                    alt={tech.split('.')[0].toUpperCase()}
                    class="inline-block w-8 h-8 m-1 transition-transform duration-300 hover:scale-110 "
                />
            ))}
        </div>
    </div>
</div>
